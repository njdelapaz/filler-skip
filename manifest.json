{
  "manifest_version": 3,
  "name": "Filler Skip",
  "version": "1.0",
  "description": "Skips anime filler (probably)",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Filler Skip"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*.crunchyroll.com/*",
    "*://*.animefillerlist.com/*"
  ]
}
